<TextField
  @type={{this.type}}
  @label={{this.label}}
  @mode={{@mode}}
  @value={{@value}}
  @className={{this.className}}
  @required={{@required}}
  @disabled={{@disabled}}
  @validationMessage={{this.validationMessage}}
  @invalid={{this.invalid}}
  @iconComponent={{this.iconComponent}}
  @dataTestName={{this.dataTestName}}
  @handleInput={{action this.handleInput}}
  @theme={{@theme}}
  @animatedLabel={{@animatedLabel}}
/>