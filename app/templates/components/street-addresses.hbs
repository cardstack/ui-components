<ul class="cs-component-street-addresses cs-input-list">
  {{#each this.values as |value index|}}
    <li class="cs-input-list--item" data-test-multi-item-list>
      <StreetAddress
        @selected={{value}}
        @changeAction={{action "updateValue" index}}
        @mode={{@mode}}
        @showLabelInViewMode={{@showLabelInViewMode}} />
      <button
        {{on "click" this.addComponent}}
        class="cs-input-list--add"
        data-test-multi-item-list-add-btn>
        Add
      </button>
    </li>
  {{/each}}
</ul>