<button
  {{on "click" this.handleClick}}
  class={{concat "cs-component-cta"
    (if @variant (concat " " @variant))
    (if @theme (concat " " @theme "-cta"))
    (if @disabled " disabled")
    (if @isLoading " loading")}}
  disabled={{@disabled}}
  data-test-cs-component-cta={{this.variant}}
  ...attributes
>
  {{#if @label}}
    {{@label}}
  {{else}}
    {{yield}}
  {{/if}}
</button>