{{#freestyle-guide
  title="Ember Freestyle"
  subtitle="Living Style Guide"
  }}

  {{#freestyle-section name="dropdown"}}
    {{#freestyle-collection title="dropdown" defaultKey="default" inline=true as |collection|}}
      {{#collection.variant key="default"}}
        {{#freestyle-note "dropdown--notes"}}
          ```
          countries = [
            { name: 'United States' },
            { name: 'Spain' },
            { name: 'Portugal' },
            { name: 'Russia' },
            { name: 'Latvia' },
            { name: 'Brazil' },
            { name: 'United Kingdom' }
          ];
          ```
        {{/freestyle-note}}
        {{#freestyle-usage "dropdown" title="Dropdown"}}
          <Dropdown @options={{countries}} @labelText="Select a country" />
        {{/freestyle-usage}}
      {{/collection.variant}}
      {{#collection.variant key="with-default-selected"}}
        {{#freestyle-note "dropdown-with-default-selected--notes"}}
          ```
          export default Component.extend({
            // ...
            selected: { name: "Spain" }
          });
          ```
        {{/freestyle-note}}
        {{#freestyle-usage "dropdown-with-default-selected" title="Dropdown"}}
          <Dropdown @options={{countries}} @labelText="Select a country" @selected={{selected}} />
        {{/freestyle-usage}}
      {{/collection.variant}}
      {{#collection.variant key="multi-select"}}
        {{#freestyle-usage "dropdown-multiple" title="Multiple Select Dropdown"}}
          <Dropdown @options={{countries}} @labelText="Select a country" @multiple={{true}} />
        {{/freestyle-usage}}
      {{/collection.variant}}
    {{/freestyle-collection}}
  {{/freestyle-section}}

  {{#freestyle-section name="CTA"}}
    {{#freestyle-collection title="CTA" defaultKey="primary" inline=true as |collection|}}
      {{#collection.variant key="primary"}}
        {{#freestyle-usage "primary-cta" title="Primary CTA"}}
          <Cta @type="primary">Primary Call to Action</Cta>
        {{/freestyle-usage}}
      {{/collection.variant}}

      {{#freestyle-note "primary-cta--notes"}}
        By default, `Cta` will render a primary type
      {{/freestyle-note}}

      {{#collection.variant key="secondary"}}
        {{#freestyle-usage "secondary-cta" title="Secondary CTA"}}
          <Cta @type="secondary">Secondary Call to Action</Cta>
        {{/freestyle-usage}}
      {{/collection.variant}}
    {{/freestyle-collection}}
  {{/freestyle-section}}

  {{#freestyle-section name="TextField"}}
    {{#freestyle-collection title="TextField" defaultKey="optional" inline=true as |collection|}}
      {{#collection.variant key="optional"}}
        {{#freestyle-usage "text-field-optional" title="Optional Text Field"}}
          <TextField @label="What's your name?" />
        {{/freestyle-usage}}
      {{/collection.variant}}

      {{#collection.variant key="required"}}
        {{#freestyle-usage "text-field-required" title="Required Text Field"}}
          <TextField @label="What's your name?" @required={{true}} />
        {{/freestyle-usage}}
      {{/collection.variant}}
    {{/freestyle-collection}}
  {{/freestyle-section}}

  {{#freestyle-section name="Choose Items"}}
    {{#freestyle-usage "text-cta" title="Choose One (Text)"}}
      <ChooseOne @choices={{selectItemOptions}} @selectionChanged={{action doSomething}} />
    {{/freestyle-usage}}

    {{#freestyle-note "text-choose-one--notes"}}
      Takes an array of primitives or objects, and an optional action to be called when selecting an item.
    {{/freestyle-note}}

    {{#freestyle-usage "text-cta" title="Choose Many (Text)"}}
      <ChooseMany @choices={{selectItemOptions}} @selectionChanged={{action doSomething}} />
    {{/freestyle-usage}}

    {{#freestyle-note "text-choose-many--notes"}}
      Takes an array of primitives or objects, and an optional action to be called when selecting an item.
    {{/freestyle-note}}
  {{/freestyle-section}}

  {{#freestyle-section name="Email Input"}}
    {{#freestyle-usage "email-input-optional" title="Optional"}}
      <Email @label="Email Address" />
    {{/freestyle-usage}}

    {{#freestyle-usage "email-input-required" title="Required"}}
      <Email @label="Email Address" @required={{true}} />
    {{/freestyle-usage}}
  {{/freestyle-section}}
{{/freestyle-guide}}