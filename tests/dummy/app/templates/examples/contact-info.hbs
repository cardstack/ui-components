<section class="example-group">
  <h2 class="ui-components-section-title example-group--title">Contact Info</h2>

  <div class="example-group--prompt">
    <h3 class="ui-components-headline">How would you like to correspond with others?</h3>
    <p class="ui-components-body">
      This information will not be shared with others, we will provide a proxy when needed.
      This is how the correspondence will reach you on your end.
    </p>
  </div>

  <form class="example-form contact-info">
    <TextField @label="Please enter your full name" @required={{true}} />
    <PhoneNumberField />
    <ChooseContactType />
    <Email @label="Email" @required={{true}} />
    <StreetAddress @label="Mailing address" />
    <Cta>Submit</Cta>
  </form>
</section>