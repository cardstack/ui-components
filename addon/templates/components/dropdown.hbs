        onopen=(action (mut isOpen) true)
        onclose=(action (mut isOpen) false)
        id=(concat elementId "-dropdown")
        as |option|}}
        {{get option searchField}}
      {{/power-select}}
    {{/if}}
  {{/if}}
  <label class="cs-component-dropdown--label {{if selected "with-option-selected"}}" for={{concat elementId "-dropdown"}}>{{label}}</label>
</div>