{{choose-one/contact-type
  setAddNewTypeVisible=(action (mut addNewTypeVisible))
  choices=choices
  selectedItem=selectedItem
}}

{{#if addNewTypeVisible}}
  <hr>
  <TextField @label="Phone Number Name" @required={{true}} @value={{newContactType}} />
  <Cta @handleClick={{action "addContactType"}} @label="Add" @disabled={{newContactTypeIsEmpty}} />
{{/if}}