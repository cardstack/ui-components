<ChooseOne::ContactType
  @setAddNewTypeVisible={{action (mut this.addNewTypeVisible)}}
  @choices={{this.choices}}
  @selectedItem={{this.selectedItem}}
/>

{{#if this.addNewTypeVisible}}
  <hr>
  <TextField @label="Phone Number Name" @required={{true}} @value={{this.newContactType}} />
  <Cta @handleClick={{action "addContactType"}} @label="Add" @disabled={{this.newContactTypeIsEmpty}} />
{{/if}}