{{#if (eq @mode "view")}}
  <TextView @showLabelInViewMode={{@showLabelInViewMode}} @label={{this.label}} @value={{this.selected}} />
{{else}}
  <div class="cs-component-street-address__container">
    <Dropdown
      @options={{this.predictions}}
      @searchAction={{action "requestPredictions"}}
      @searchField="description"
      @selected={{this.selected}}
      @changeAction={{action this.changeAction}}
      @label={{this.label}}
      @dataTestName="street-address"
      @theme={{@theme}}
    />
  </div>
{{/if}}